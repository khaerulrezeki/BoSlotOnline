  section.p-0.color-white.font-1
    .background-holder.overlay.overlay-2(style="background-image:url(/images/siteImages/bo-thoughts.JPG);")  
    // /.background-holder
    .container.py-5
      .row.h-half.align-items-center.py-5.justify-content-end
        .col-md-8.col-lg-5
          h1.fs-3.fs-md-4.mb-3 About Bo
          p.lead.fs-xs-1 Full Stack Web Developer | Family Man, Pool Guy, Lover of Code
      // /.row
